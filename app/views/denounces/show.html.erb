<div class="row d-flex justify-content-center my-4">
  <div class="col-xs-12 col-lg-6 col-xl-4">
    <div class="card text-center">
      <div class="card-header bg-dark text-white h2 mb-3">
        Denounce 
      </div>
      <div class="card-body">
        <div class="col-12">
          <dl class="row text-start">
            <dt class="col-6"><strong>Registration date:</strong></dt>
            <dd class="col-6"><%= @denounce.created_at %></dd>

            <dt class="col-6"><strong>Event date:</strong></dt>
            <dd class="col-6"><%= @denounce.event_date %></dd>

            <dt class="col-6"><strong>Area:</strong></dt>
            <dd class="col-6"><%= @denounce.area %></dd>

            <dt class="col-6"><strong>Title:</strong></dt>
            <dd class="col-6"><%= @denounce.title %></dd>

            <dt class="col-6"><strong>Description:</strong></dt>
            <dd class="col-6"><%= @denounce.description %></dd>

            <dt class="col-6"><strong>User:</strong></dt>
            <dd class="col-6"><%= @denounce.user_id %></dd>
         
            <dt class="col-6"><strong>Anonymous:</strong></dt>
            <dd class="col-6"><%= @denounce.anonymouse %></dd>
            <% if @denounce.address %>
              <h4>Address</h4>
              <dt class="col-6"><strong>State</strong></dt>
              <dd class="col-6">
                <%= @denounce.address.state %>
              </dd>
              <dt class="col-6"><strong>Municipality</strong></dt>
              <dd class="col-6">
                <%= @denounce.address.municipality %>
              </dd>
              <dt class="col-6"><strong>Postal Code</strong></dt>
              <dd class="col-6">
                <%= @denounce.address.postal_code %>
              </dd>
              <dt class="col-6"><strong>Street</strong></dt>
              <dd class="col-6">
                <%= @denounce.address.street %>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>
      <div class="card-footer">
        <div class="row justify-content-center">
          <div class="col-6">
            <%= link_to 'Back', denounces_path, class:"btn btn-dark col-md-4 col-lg-6 text-white" %>
          </div> 
          <div class="col-6">
            <%= link_to 'Edit', edit_denounce_path(@denounce), class:"btn btn-primary col-md-4 col-lg-6 text-white" %>
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>
