<div class="row d-flex justify-content-center my-4">
  <div class="col-xs-12 col-lg-6 col-xl-4">
    <div class="card text-center">
      <div class="card-header h2 mb-3">
        Places of interest
      </div>
      <div class="body-card">
        <div class="col-12">
          <dl class="row text-start m-2">
            <dt class="col-6"><strong>Postal code:</strong></dt>
            <dd class="col-6"><%= @place_of_interest.postal_code %></dd>

            <dt class="col-6"><strong>Settlement:</strong></dt>
            <dd class="col-6"><%= @place_of_interest.settlement %></dd>
            
            <dt class="col-6"><strong>User:</strong></dt>
            <dd class="col-6"><%= @place_of_interest.user.username %></dd>
          </dl>
        </div>
      </div>

      <div class="card-footer">
        <div class="row justify-content-center">
          <div class="col-6">
            <%= link_to 'Back', place_of_interests_path, class:"btn btn-dark col-md-4 col-lg-6 text-white" %>
          </div>
          <div class="col-6">
            <%= link_to 'Edit', edit_place_of_interest_path(@place_of_interest), class:"btn btn-primary col-md-4 col-lg-6 test-white"%> 
          </div>
        </div> 
      </div> 
    </div>
  </div>
</div>