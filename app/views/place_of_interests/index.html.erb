
<div class="row justify-content-center">
  <div class="col-xs-12 col-md-6 text-center my-4">
    <h3>Place Of Interests</h3>
  </div>

  <div class="col-xs-12 col-md-10">
    <div class="table-reponsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Postal code</th>
            <th>Settlement</th>
            <th colspan="2"></th>
            <th> <%= link_to 'New POI', new_place_of_interest_path, class: "btn btn-primary" %> </th>
          </tr>
        </thead>

        <tbody>
          <% @place_of_interests.each do |place_of_interest| %>
            <tr>
              <td><%= place_of_interest.postal_code %></td>
              <td><%= place_of_interest.settlement %></td>
              <th colspan="2"></th>
              <td>
                <%= link_to place_of_interest, class: "btn btn-link" , title: "Show" , "data-bs-toggle"=> :tooltip do   %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to place_of_interests_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" , title: "Delete" , "data-bs-toggle"=> :tooltip do  %>
                  <i class="bi bi-trash"></i>
                <% end %>
                <%= link_to edit_place_of_interest_path(place_of_interest), class: "btn btn-link", title: "Edit" , "data-bs-toggle"=> :tooltip do   %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
