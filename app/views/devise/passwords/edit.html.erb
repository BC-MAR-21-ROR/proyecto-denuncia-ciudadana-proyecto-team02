<div class="row justify-content-center mt-5">
  <div class="col-xs-12 col-md-6 col-xl-4">
    <div class="card shadow">
      <div class="card-header text-center">
        <h3>Change your Password</h3>
      </div>
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="card-body p-sm-5 mb-sm-5">
            <p class="card-text">
              <%= f.password_field :password, label: "New password",  autofocus: true, autocomplete: "new-password" %>

              <%= f.password_field :password_confirmation, label:"Confirm new password", autocomplete: "new-password", placeholder: "Confirm same password as above." %>

              <div class="text-center my-5">
                Not your screen?, Go to...<%= render "devise/shared/links" %>
              </div>
            </p>
          </div>
          <div class="card-footer text-center">
            <%= f.submit "Change my password" , class: "btn btn-primary btn-lg" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
