<div class="row justify-content-center mt-5">
  <div class="col-xs-12 col-md-6 col-xl-4">
    <div class="card shadow">
      <div class="card-header text-center">
        <h3>Reset Password</h3>
      </div>
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post
          }) do |f| %>
        <div class="card-body mx-md-5 py-5">
          <p class="card-text">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Ex: example@domain.com" ,
                help: "You need to provide an existing email." %>
          </p>
          <div class="text-center mt-5">
            Not your screen? <%= render "devise/shared/links" %>
          </div>
        </div>
        <div class="card-footer text-center">
          <%= f.submit "Reset Password" , class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>